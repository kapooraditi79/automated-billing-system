<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SubProducts</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900">
      <div class="p-4">
        <a href="/randomModel" class="text-white underline hover:text-blue-500"
          >Back To Main Products</a
        >
      </div>
      <div class="flex items-start gap-5">
        <% subProducts.forEach(function(subProduct){%>
        <div class="w-60">
          <div class="w-full h-52 flex items-center justify-center bg-blue">
            <img class="h-[12rem]" src="" alt="<%= subProduct.name %>" />
          </div>
          <div
            class="flex justify-between bg-blue items-center px-4 py-4 text-white"
          >
            <div>
              <h3><%= subProduct.name %></h3>
              <h3><%= subProduct.price %></h3>
              <h3><%= subProduct.discount%></h3>
            </div>
          </div>
        </div>
        <%})%>
      </div>
    </div>
  </body>
</html>
